{
    "compilerOptions": {
      "composite": true,
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "node",
      "jsx": "react",
      "strict": true,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true
    },
    "exclude": [
      "node_modules",
      "**/__mocks__/*",
      "**/__tests__/*",
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
  }